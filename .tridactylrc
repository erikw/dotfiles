" Erik Westrup's Tridactyl configuration.
" To enable support for reading this file, run :installnative then :source in Tridactyl.

" Modeline {{
"	 vi: foldmarker={{,}} foldmethod=marker foldlevel=0: tabstop=8: filetype=vim:
" }}

" General {{
	set searchengine duckduckgo
	set theme dark
	"set newtab about:newtab		" Don't use Tridactyl's startpage. NOTE not working; https://github.com/tridactyl/tridactyl/issues/384
	set homepages ["about:newtab"]
" }}

" Search {{
	set findcase smart
	set incsearch true
	set minincsearchlen 2

	"unset searchurls	" Unset default names that I don't like
	" Unset is not working, have to manually unset defaults... :(.  https://github.com/tridactyl/tridactyl/issues/929
	set searchurls.amazon ""
	set searchurls.amazonuk ""
	set searchurls.bing ""
	set searchurls.cnrtl ""
	set searchurls.duckduckgo ""
	set searchurls.gentoo_wiki ""
	set searchurls.github ""
	set searchurls.google ""
	set searchurls.googlelucky ""
	set searchurls.googleuk ""
	set searchurls.mdn ""
	set searchurls.osm ""
	set searchurls.qwant ""
	set searchurls.scholar ""
	set searchurls.searx ""
	set searchurls.startpage ""
	set searchurls.twitter ""
	set searchurls.wikipedia ""
	set searchurls.yahoo ""
	set searchurls.youtube ""

	set searchurls.ali https://www.aliexpress.com/wholesale?SearchText=%s
	set searchurls.amazons http://www.amazon.de/s/field-keywords=%s
	set searchurls.aur https://aur.archlinux.org/packages/?K=%s
	set searchurls.d http://www.dict.cc/?s=%s
	set searchurls.duck https://duckduckgo.com/?q=%s
	set searchurls.duckduckgo https://duckduckgo.com/?q=%s
	set searchurls.di https://duckduckgo.com/?iax=images&ia=images&q=%s
	set searchurls.g https://www.google.com/search?hl=en&q=%s
	set searchurls.gd https://www.google.de/search?hl=de&q=%s
	set searchurls.gi http://google.com/search?hl=en&tbm=isch&q=%s
	set searchurls.gs http://www.google.se/search?hl=sv&q=%s
	set searchurls.imdb http://www.imdb.com/find?q=%s
	set searchurls.leo https://dict.leo.org/englisch-deutsch/%s
	set searchurls.map http://maps.google.com/maps?q=%s
	set searchurls.ports https://www.freebsd.org/cgi/ports.cgi?stype=all&query=%s
	set searchurls.t https://translate.google.com/#auto/en/%s
	set searchurls.td https://translate.google.com/#auto/de/%s
	set searchurls.ts https://translate.google.com/#auto/sv/%s
	set searchurls.w http://en.wikipedia.org/wiki/Special:Search?search=%s
	set searchurls.ws http://sv.wikipedia.org/wiki/Special:Search?search=%s
	set searchurls.y http://www.youtube.com/results?search_query=%s
	set searchurls.osm https://www.openstreetmap.org/search?query=%s
" }}

" Bindings {{
	" F1 closes Tree Style Tabs sidebar.
	unbind <F1>
	bind <ArrowLeft> tabprev
	bind <ArrowRight> tabnext
" }}

" Quickmarks {{
	quickmark F http://fritz.box/
	quickmark c https://contacts.google.com/
	quickmark C https://contacts.google.com/
	quickmark e https://erikw.me/
	quickmark f https://cloud.feedly.com/
	quickmark g https://gmail.com/
	quickmark n https://my.n26.com/
	quickmark p https://photos.google.com/
" }}
